[global]
  font = Fira Code 9
  allow_markup = yes
  format = "<b>%s</b>\n%b"
  word_wrap = yes
  ignore_newline = no
  geometry = 500x5-0
  shrink = yes
  transparency = 0
  idle_threshold = 30

[frame]
  color = "#{{base05-hex}}"

[shortcuts]
  close = mod4+space
  close_all = mod4+shift+space

[urgency_low]
  background = "#{{base01-hex}}"
  foreground = "#{{base03-hex}}"
  timeout = 10

[urgency_normal]
  background = "#{{base02-hex}}"
  foreground = "#{{base05-hex}}"
  timeout = 10

[urgency_critical]
  background = "#{{base08-hex}}"
  foreground = "#{{base06-hex}}"
  timeout = 0
